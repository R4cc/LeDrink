@using LeDrink.DAL.Models
<div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog" style="top: 3rem">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">@(ConfirmationTitle)</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"
                            @onclick="() => OnConfirmationChange.InvokeAsync(false)">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @(ConfirmationMessage)
                </div>
                <div class="modal-footer">
                    <Button Type="@AntDesign.ButtonType.Primary" data-dismiss="modal"
                            @onclick="() => OnConfirmationChange.InvokeAsync(false)">Cancel</Button>
                    <Button Type="@AntDesign.ButtonType.Primary" Danger
                            @onclick="() => OnConfirmationChange.InvokeAsync(true)">Delete</Button>
                </div>
            </div>
        </div>
    </div>
@code {
    [Parameter] public string ConfirmationTitle { get; set; }
    [Parameter] public string ConfirmationMessage { get; set; }
    [Parameter] public EventCallback<bool> OnConfirmationChange { get; set; }
}
